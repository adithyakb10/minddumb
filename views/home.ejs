<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/home.css" />
    <title>Thoughts</title>
  </head>
  <body>
    <div class="container">
      <img src="<%= user.picture %>" alt="profile pic" />
      <p>Welcome, <%= user.name %></p>
      <p id="messages">
        <a href="/secrets"
          >View the public messages <i class="fa-solid fa-envelope"></i> >></a
        >
      </p>
      <h1>What's on your mind?</h1>
      <form action="/submit" method="post">
        <textarea
          placeholder="Share your thoughts"
          name="thought"
          id=""
          cols="30"
          rows="10"
        ></textarea>
        <div class="submit-box">
          <div class="switch">
            <input
              value="true"
              name="isPrivate"
              id="checkbox1"
              class="look"
              type="checkbox"
            />
            <label for="checkbox1"></label>
            <p>Private</p>
          </div>
          <button id="submit" type="submit">Submit</button>
        </div>
      </form>
    </div>
    <p id="title">Your Messages!</p>
    <div class="message-section">
      <div class="thoughts">
        <p class="subtitle">Public Messages!</p>
        <% messages = user.messages.reverse() %> <%
        messages.forEach(function(object){ %>
        <div class="messages">
          <div class="header">
            <img src="<%= user.picture %>" alt="message" />
            <div class="user-section">
              <p><%= user.name %></p>
              <p><%= object.formattedDate %></p>
            </div>
          </div>
          <p class="message"><%= object.message %></p>
        </div>
        <% }); %>
      </div>
      <div class="thoughts">
        <p class="subtitle">Private Messages!</p>
        <% privateMessages = user.privateMessages.reverse() %> <%
        privateMessages.forEach(function(object){ %>
        <div class="messages">
          <div class="header">
            <img src="<%= user.picture %>" alt="message" />
            <p><%= object.formattedDate %></p>
          </div>
          <p class="message">
            <span id="message-user"><%= user.name %><br /></span><%=
            object.message %>
          </p>
        </div>
        <% }); %>
      </div>
    </div>
    <script
      src="https://kit.fontawesome.com/bda6fc51fa.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
